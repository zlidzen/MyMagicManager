<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_version"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.538"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.955" />

    <Button
        android:id="@+id/btnOpenSettings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/settings"
        app:layout_constraintEnd_toEndOf="@+id/btnOpenDecs"
        app:layout_constraintStart_toStartOf="@+id/btnOpenDecs"
        app:layout_constraintTop_toBottomOf="@+id/btnOpenDecs" />

    <Button
        android:id="@+id/btnOpenAbout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/about"
        app:layout_constraintEnd_toEndOf="@+id/btnOpenSettings"
        app:layout_constraintStart_toStartOf="@+id/btnOpenSettings"
        app:layout_constraintTop_toBottomOf="@+id/btnOpenSettings" />

    <Button
        android:id="@+id/btnOpenDecs"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/deck"
        app:layout_constraintEnd_toEndOf="@+id/btnOpenScan"
        app:layout_constraintStart_toStartOf="@+id/btnOpenScan"
        app:layout_constraintTop_toBottomOf="@+id/btnOpenScan" />

    <Button
        android:id="@+id/btnOpenScan"
        android:layout_width="250dp"
        android:layout_height="47dp"
        android:text="@string/scan"
        app:layout_constraintBottom_toTopOf="@+id/tVersion"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.534"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.365" />

</androidx.constraintlayout.widget.ConstraintLayout>